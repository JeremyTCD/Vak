@{
    VakAccount vakAccount = ViewData[nameof(VakAccount)] as VakAccount;
    string accountControllerName = nameof(AccountController).Replace("Controller", "");
    string homeControllerName = nameof(HomeController).Replace("Controller", "");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Identity Sample</title>
    <script src="~/js/shim.min.js"></script>
    <script src="~/js/zone.js"></script>
    <script src="~/js/Reflect.js"></script>
</head>
<body>
    <a asp-controller="@homeControllerName" asp-action="Index" class="navbar-brand">Logo</a><br />

    @if (vakAccount != null)
    {
        <a asp-controller="@homeControllerName" asp-action="Index" title="Manage">My VakKits</a><br />
        <a asp-controller="@homeControllerName" asp-action="Index" title="Manage">My VakUnits</a><br />
    }
    else
    {
        <a asp-controller="@accountControllerName" asp-action="SignUp">Sign up</a><br />
        <a asp-controller="@accountControllerName" asp-action="Login">Log in</a><br />
    }

    <a asp-controller="@homeControllerName" asp-action="Index" class="navbar-brand">Overview</a><br />
    <a asp-controller="@homeControllerName" asp-action="Index" class="navbar-brand">VakUnit gallery</a><br />
    <a asp-controller="@homeControllerName" asp-action="Index" class="navbar-brand">Learn</a><br />
    <a asp-controller="@homeControllerName" asp-action="Index" class="navbar-brand">Help</a><br />

    @if (vakAccount != null)
    {
        <form asp-controller="@accountControllerName" asp-action="@nameof(AccountController.LogOff)" method="post">
            <a asp-controller="@accountControllerName" asp-action="@nameof(AccountController.ManageAccount)">Account: @vakAccount.Email</a><br />
            <a asp-controller="@accountControllerName" asp-action="@nameof(AccountController.ManageAccount)">Manage account</a><br />
            <button type="submit">Log off</button>
        </form>
    }

    <div>
        more
    </div>

    <div>
        @RenderBody()
    </div>
</body>
</html>
