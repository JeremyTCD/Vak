@model ChangeEmailFormModel

@{ 
    ViewData["Title"] = StringsAccessor.Value.ViewTitle_ChangeEmail;
    VakAccount vakAccount = ViewData[nameof(VakAccount)] as VakAccount;
}

<h2>@StringsAccessor.Value.ViewTitle_ChangeEmail.</h2>
<div>logo</div>
<form asp-controller="@nameof(AccountController).Replace("Controller","")" asp-action="@nameof(AccountController.ChangeEmail)" method="post" role="form">
    <div>
        <input asp-for="CurrentEmail" type="hidden" value="@vakAccount.Email" />
    </div>
    <div>
        <label asp-for="Password"></label>
        <div>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div>
        <label asp-for="NewEmail"></label>
        <div>
            <input asp-for="NewEmail" />
            <span asp-validation-for="NewEmail"></span>
        </div>
    </div>
    <div>
        <div>
            <button type="submit">Submit</button>
        </div>
    </div>
</form>
<div>
    <a asp-controller="@nameof(AccountController).Replace("Controller","")" asp-action="@nameof(AccountController.ManageAccount)">Cancel</a>
</div>