@model SignUpViewModel

@{
    ViewData["Title"] = StringOptionsAccessor.Value.SignUpView_Title;
}

<h2>@StringOptionsAccessor.Value.SignUpView_Title.</h2>
<div>
    logo
</div>
<form asp-controller="@nameof(AccountController).Replace("Controller","")" asp-action="@nameof(AccountController.SignUp)" 
      asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">

    <div>
        <label asp-for="Email"></label>
        <div>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div>
        <label asp-for="Password"></label>
        <div>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div>
        <label asp-for="ConfirmPassword"></label>
        <div>
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>
    <div>
        By clicking on "Sign up" below, you are agreeing to the Terms of Service and the Privacy Policy.
    </div>
    <div>
        <button type="submit">Sign up</button>
    </div>
</form>
