@model ChangePasswordFormModel

@{
    ViewData["Title"] = StringsAccessor.Value.ViewTitle_ChangePassword;
}

<h2>@StringsAccessor.Value.ViewTitle_ChangePassword.</h2>
<div>logo</div>
<form asp-controller="@nameof(AccountController).Replace("Controller","")" asp-action="@nameof(AccountController.ChangePassword)" method="post" role="form">
    <div>
        <label asp-for="CurrentPassword"></label>
        <div>
            <input asp-for="CurrentPassword" />
            <span asp-validation-for="CurrentPassword"></span>
        </div>
    </div>
    <div>
        <label asp-for="NewPassword"></label>
        <div>
            <input asp-for="NewPassword" />
            <span asp-validation-for="NewPassword"></span>
        </div>
    </div>
    <div>
        <label asp-for="ConfirmNewPassword"></label>
        <div>
            <input asp-for="ConfirmNewPassword" />
            <span asp-validation-for="ConfirmNewPassword"></span>
        </div>
    </div>
    <div>
        <button type="submit">Submit</button>
    </div>
    <div>
        <a asp-controller="@nameof(AccountController).Replace("Controller","")" asp-action="@nameof(AccountController.ManageAccount)">Cancel</a>
    </div>
</form>