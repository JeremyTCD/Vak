@using Jering.VectorArtKit.WebApplication.Controllers
@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"].</h2>

<div>logo</div>

<form asp-controller="@nameof(AccountController).Replace("Controller","")" asp-action="@nameof(AccountController.LogIn)" 
      asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label>
        <div>
            <input asp-for="Email" />
        </div>
    </div>
    <div>
        <label asp-for="Password"></label>
        <div>
            <input asp-for="Password" />
        </div>
        <a asp-action="ForgotPassword">Forgot your password?</a>
    </div>
    <div>
        <label asp-for="RememberMe"></label>
        <input asp-for="RememberMe" />
    </div>
    <div>
        <button type="submit">Log in</button>
    </div>
</form>
<div>
    <a asp-controller="@nameof(AccountController).Replace("Controller","")" asp-action="@nameof(AccountController.SignUp)" 
       asp-route-returnurl="@ViewData["ReturnUrl"]">Sign up as a new user?</a>
</div>