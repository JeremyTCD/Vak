@{
    ViewData["Title"] = StringOptionsAccessor.Value.ViewTitle_ManageAccount;
    VakAccount vakAccount = ViewData[nameof(VakAccount)] as VakAccount;
}

<h2>@StringOptionsAccessor.Value.ViewTitle_ManageAccount.</h2>
<div>
    logo
</div>
<hr />
<div>
    <div>
        @StringOptionsAccessor.Value.DisplayName_Password
    </div>
    <div>
        <a asp-controller="@nameof(AccountController).Replace("Controller", "")" asp-action="@nameof(AccountController.ChangePassword)">Change password</a>
    </div>
</div>
<hr />
<div>
    <div>
        @StringOptionsAccessor.Value.DisplayName_Email
    </div>
    <div>
        Email address: @vakAccount.Email
    </div>
    @if (vakAccount.EmailVerified)
    {
        <div>
            Email address verified
        </div>
    }
    else
    {
        <div>
            Email address unverified
        </div>
        <div>
            <a asp-controller="@nameof(AccountController).Replace("Controller", "")" asp-action="@nameof(AccountController.SendEmailVerificationConfirmation)">Send verification email</a>
        </div>
    }
    <div>
        <a asp-controller="@nameof(AccountController).Replace("Controller", "")" asp-action="@nameof(AccountController.ChangeEmail)">Change email</a>
    </div>
</div>
<hr />
<div>
    <div>
        @StringOptionsAccessor.Value.DisplayName_AlternativeEmail
    </div>
    @if (vakAccount.AlternativeEmail == null)
    {
        <div>
            Alternative email address not set
        </div>
    }
    else
    {
        <div>
            Alternative email address: @vakAccount.AlternativeEmail
        </div>
        @if (vakAccount.AlternativeEmailVerified)
        {
            <div>
                Alternative email address verified
            </div>
        }
        else
        {
            <div>
                Alternative email unverified
            </div>
            <div>
                <a asp-controller="@nameof(AccountController).Replace("Controller", "")" asp-action="@nameof(AccountController.SendEmailVerificationConfirmation)">Send verification email</a>
            </div>
        }
    }
    <div>
        <a asp-controller="@nameof(AccountController).Replace("Controller", "")" asp-action="@nameof(AccountController.ChangeAlternativeEmail)">Change alternative email</a>
    </div>
</div>
<hr />
<div>
    <div>
        @StringOptionsAccessor.Value.DisplayName_DisplayName
    </div>
    @if (vakAccount.DisplayName == null)
    {
        <div>
            Display name not set
        </div>
    }
    else
    {
        <div>
            Display name: @vakAccount.DisplayName
        </div>
    }
    <div>
        <a asp-controller="@nameof(AccountController).Replace("Controller", "")" asp-action="@nameof(AccountController.ChangeDisplayName)">Change display name</a>
    </div>
</div>
<hr />
<div>
    <div>
        @StringOptionsAccessor.Value.DisplayName_TwoFactor
    </div>
    @if (vakAccount.TwoFactorEnabled)
    {
        <div>
            Two factor enabled
        </div>
        <div>
            <a asp-controller="@nameof(AccountController).Replace("Controller", "")" asp-action="@nameof(AccountController.DisableTwoFactorConfirmation)">Disable two factor authentication</a>
        </div>
    }
    else
    {
        <div>
            Two factor disabled
        </div>
        <div>
            <a asp-controller="@nameof(AccountController).Replace("Controller", "")" asp-action="@nameof(AccountController.EnableTwoFactor)">Enable two factor authentication</a>
        </div>
    }
</div>

