@model ForgotPasswordViewModel

@{ 
    ViewData["Title"] = StringOptionsAccessor.Value.ForgotPasswordView_Title;
}

<h2>@StringOptionsAccessor.Value.ForgotPasswordView_Title.</h2>
<div>logo</div>
<form asp-controller="@nameof(AccountController).Replace("Controller","")" asp-action="@nameof(AccountController.ForgotPassword)" method="post" role="form">
    <div>
        <label asp-for="Email"></label>
        <div>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div>
        <div>
            <button type="submit">Submit</button>
        </div>
    </div>
</form>
<div>
    <a asp-controller="@nameof(AccountController).Replace("Controller","")" asp-action="@nameof(AccountController.LogIn)">Return to login</a>
</div>