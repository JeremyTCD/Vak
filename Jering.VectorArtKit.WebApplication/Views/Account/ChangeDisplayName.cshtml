@model ChangeDisplayNameFormModel

@{ 
    ViewData["Title"] = StringsAccessor.Value.ViewTitle_ChangeDisplayName;
    VakAccount vakAccount = ViewData[nameof(VakAccount)] as VakAccount;
}

<h2>@StringsAccessor.Value.ViewTitle_ChangeDisplayName.</h2>
<div>logo</div>
<form asp-controller="@nameof(AccountController).Replace("Controller","")" asp-action="@nameof(AccountController.ChangeDisplayName)" method="post" role="form">
    <div>
        <input asp-for="CurrentDisplayName" type="hidden" value="@vakAccount.DisplayName" />
    </div>
    <div>
        <label asp-for="Password"></label>
        <div>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div>
        <label asp-for="NewDisplayName"></label>
        <div>
            <input asp-for="NewDisplayName" />
            <span asp-validation-for="NewDisplayName"></span>
        </div>
    </div>
    <div>
        <div>
            <button type="submit">Submit</button>
        </div>
    </div>
</form>
<div>
    <a asp-controller="@nameof(AccountController).Replace("Controller","")" asp-action="@nameof(AccountController.ManageAccount)">Cancel</a>
</div>